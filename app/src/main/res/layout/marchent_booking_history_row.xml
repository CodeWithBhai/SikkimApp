<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fivedp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fontFamily="@font/metropolis_medium"
            android:text="Booking On-"
            android:textColor="@color/black"
            android:textSize="@dimen/ten" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:fontFamily="@font/metropolis_medium"
                android:text=" 05-6-2022 10:00AM"
                android:textColor="@color/theme"
                android:textSize="@dimen/ten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/twodp"
            android:id="@+id/confirmTicket"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                app:cardCornerRadius="@dimen/fivedp"
                android:elevation="8dp"
                app:cardElevation="@dimen/fivedp"
                android:layout_margin="5dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="@dimen/fiftydep"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/metropolis_medium"
                    android:gravity="center"
                    android:text="05 MAY 2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Order Number: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/orderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="678678676767"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Booking Date:  "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/bookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="02-May-2022"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Category name: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/categoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Amusement Park"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Location Name: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/locationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Jaliya Wala Bagh, Punjab"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentydp"
                android:fontFamily="@font/metropolis_medium"
                android:text="1 Ticket"
                android:textColor="@color/black"
                android:textSize="@dimen/ten" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_250sdp"
            android:layout_gravity="right"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/twodp"
            android:background="@color/light_grey"/>
    </LinearLayout>

</LinearLayout>