<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Partner.MarchantAllBooking">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/tensp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/fivedp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/marchentAccountPage"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_icon" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/twentydp"
            android:layout_height="@dimen/twentydp"
            android:tint="@color/black"
            app:srcCompat="@drawable/ic_search" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/twentyFive"
            android:layout_height="@dimen/twentyFive"
            android:layout_marginLeft="@dimen/fifteen"
            app:srcCompat="@drawable/ic_notifications_black_24dp" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tensp"
        android:background="@drawable/bg_red_stoke"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/tensp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10-Jun-2022"
                android:textSize="@dimen/eleven" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/twentyFive"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/fivedp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Total Booking"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tweleve" />

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="3dp"
                android:layout_height="@dimen/fiftydep"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/fivedp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Total Tickets"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="67"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tweleve" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/imageSliderMain"
        android:background="@color/theme"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="Today"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/filter2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="Tomorrow"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/filter3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="This Weekend"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_filter" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/metropolis_medium"
            android:text="All Bookings"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteensp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:text="See All"
                android:textSize="@dimen/elevensp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_marginBottom="@dimen/fivedp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fivedp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/twodp"
            android:id="@+id/ticketOrderBooking"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                app:cardCornerRadius="@dimen/fivedp"
                android:elevation="8dp"
                android:layout_margin="5dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="@dimen/fiftydep"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/metropolis_medium"
                    android:gravity="center"
                    android:text="05 MAY 2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Order Number: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/orderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="678678676767"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Booking Date:  "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/bookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="02-May-2022"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Category name: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/categoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Amusement Park"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Location Name: "
                        android:textColor="#393737"
                        android:textSize="@dimen/ten" />

                    <TextView
                        android:id="@+id/locationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Jaliya Wala Bagh, Punjab"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentydp"
                android:fontFamily="@font/metropolis_medium"
                android:text="1 Ticket"
                android:textColor="@color/black"
                android:textSize="@dimen/ten" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>