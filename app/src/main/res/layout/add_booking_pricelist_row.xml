<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/evetnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:text="Event Name"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

        <TextView
            android:id="@+id/eventPersonNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center|right"
            android:text="X1"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

        <TextView
            android:id="@+id/eventTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="right"
            android:text="500.00"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/snackLayout"
        android:visibility="gone"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/snackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:text="Snacks"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

        <TextView
            android:id="@+id/snackPersonNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center|right"
            android:text="X1"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

        <TextView
            android:id="@+id/snackTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="right"
            android:text="500.00"
            android:textColor="#393737"
            android:textSize="@dimen/ten" />

    </LinearLayout>

</LinearLayout>