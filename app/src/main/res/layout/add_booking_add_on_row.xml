<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/fivedp"
    android:background="@color/ultra_light_grey"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/fivedp"
        app:cardCornerRadius="@dimen/fivedp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/lightSound"
            android:visibility="gone"
            android:background="@color/ultra_light_grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">

                <ImageView
                    android:id="@+id/imgActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/event_five" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcomingEvent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/note"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Light and Sound"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/note"
                    android:layout_marginTop="@dimen/twodp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Ban Jharkand, Fall Down, india"
                    android:textSize="@dimen/ten" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/note"
                        android:layout_gravity="center"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="₹ "
                        android:textColor="@color/black"
                        android:textSize="@dimen/tweleve" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/note"
                        android:layout_gravity="center"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="449/person "
                        android:textColor="@color/black"
                        android:textSize="@dimen/tweleve" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/fivedp"
                        android:layout_marginTop="@dimen/ten"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/twodp"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="Added"
                            android:drawableLeft="@drawable/ic_icon_ionic_ios_checkmark_circle"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/theme"
                            android:visibility="gone"
                            android:textSize="@dimen/tweleve"/>

                        <TextView
                            android:id="@+id/txtAddToBooking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/twodp"
                            android:fontFamily="@font/metropolis_medium"
                            android:background="@drawable/btn_price"
                            android:text="Add to Booking"
                            android:textColor="@color/white"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/tweleve"/>
                        <TextView
                            android:id="@+id/txtAfterBooking"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/twodp"
                            android:fontFamily="@font/metropolis_medium"
                            android:drawableLeft="@drawable/ic_baseline_blue_check_24"
                            android:text="  Added "
                            android:textColor="#48487B"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/tweleve"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fivedp"
        android:layout_margin="@dimen/fivedp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/twodp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/snackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="@string/coffee"
                    android:textSize="@dimen/tweleve" />

                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/twodp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Ban Jharkand, Fall Down, india"
                    android:textSize="@dimen/ten" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/twodp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="₹ "
                    android:textSize="@dimen/tweleve" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="449/person "
                    android:textSize="@dimen/tweleve" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/inc_layout"
            android:background="@drawable/red_border_bg"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                android:id="@+id/txt_itemCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/txt_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sdp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>