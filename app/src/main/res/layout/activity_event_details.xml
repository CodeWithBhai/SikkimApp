<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.EventDetails">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/theme"
        android:orientation="vertical"
        android:padding="@dimen/fivedp">

        <ImageView
            android:layout_width="@dimen/twentydp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twentydp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/metropolis_medium"
            android:text="Ban Jhakra Water Fall"
            android:textColor="@color/white"
            android:textSize="@dimen/elevensp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPlaceName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/metropolis_regular"
            android:text="Place"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen" />

        <ImageView
            android:layout_width="@dimen/twentydp"
            android:layout_height="@dimen/twentydp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_marginRight="@dimen/twentydp"
            android:src="@drawable/ic_icon_material_share"
            app:tint="@color/white" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onefiftydp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageMainImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/event_three" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirtyfive"
                    android:layout_below="@+id/ll1"
                    android:orientation="horizontal" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/frontMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="@dimen/onetwenty"
                    android:layout_marginRight="25dp"
                    android:background="@color/white"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="@dimen/ten">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:src="@drawable/ic_profile_location"
                            app:tint="@color/theme" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/ten">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/note"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/tweleve" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/note"
                                android:layout_marginTop="@dimen/twodp"
                                android:fontFamily="@font/metropolis_medium"
                                android:text="View Location on Share Location"
                                android:textSize="@dimen/ten" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/searchActivity"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/circle_icons"
                                android:padding="5dp"
                                android:src="@drawable/ic_icon_material_share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/note"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center"
                                android:text="Share"
                                android:textColor="@color/black"
                                android:textSize="@dimen/ten" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frontMain"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:paddingRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/note"
                            android:layout_gravity="center"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="â‚¹ "
                            android:textColor="@color/black"
                            android:textSize="@dimen/tweleve" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/note"
                            android:layout_gravity="center"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="449/person "
                            android:textColor="@color/black"
                            android:textSize="@dimen/tweleve" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/txtAddToBooking"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/fivedp"
                                android:background="@drawable/red_border_bg"
                                android:fontFamily="@font/metropolis_medium"
                                android:padding="5dp"
                                android:text="Add to Booking"
                                android:textColor="@color/white"
                                android:textSize="@dimen/elevensp" />

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/headingAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/metropolis_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen">

                    </TextView>

                    <TextView
                        android:id="@+id/txtAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:textSize="@dimen/eleven" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/metropolis_semi_bold"
                        android:text="@string/best_time_to_visit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen">

                    </TextView>

                    <TextView
                        android:id="@+id/txtbestTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="this is test content writen to show the view"
                        android:textSize="@dimen/eleven" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/tweleve"
                        android:fontFamily="@font/metropolis_medium" />

                    <TextView
                        android:id="@+id/txtHeadDoanddont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_semi_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/metropolis_semi_bold"
                        android:text="The Do's"
                        android:textSize="@dimen/fifteen" />

                    <TextView
                        android:id="@+id/txtDo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/tweleve"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Do this  and do this" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/metropolis_semi_bold"
                        android:text="The  Dont's"
                        android:textSize="@dimen/fifteen" />

                    <TextView
                        android:id="@+id/txtDonot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/tweleve"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Dont do this  and dont do this" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/galleryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_100sdp"
                        tools:listitem="@layout/gallery_row" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/goToBooking"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/theme"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/metropolis_bold"
                android:gravity="center"
                android:src="@drawable/ic_baseline_currency_rupee_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:text="200.00"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="right|center"
                android:text="Go To Cart"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/proceedToPayment"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="20dp"
                android:background="@drawable/proceed_white_circle"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:textSize="16sp"
                app:tint="@color/theme" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>