<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Partner.AddStaffFormActivity">

    <RelativeLayout
        android:id="@+id/myStaff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiftydep"
        android:layout_marginBottom="@dimen/fivedp"
        android:background="@color/theme"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_20sdp"
            android:onClick="back"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_back_arrow"
            app:tint="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/metropolis_medium"
            android:text="Mt Staff"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/twohundreddp"
            android:layout_height="wrap_content">

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tensp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="Staff Full Name"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/acount_bg"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Enter your Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="Email Id"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/acount_bg"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/gmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Enter your mail"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="Phone Number"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/acount_bg"
                    android:fontFamily="@font/metropolis_regular"
                    android:gravity="center"
                    android:text="IN +91"
                    android:textSize="@dimen/twelve" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/acount_bg"
                    android:ems="10"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Enter Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="Staff Category"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/acount_bg"
                android:orientation="vertical">

                <Spinner
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="Address"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/acount_bg"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Full Address"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/acount_bg"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Pincode"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_medium"
                android:text="Document"
                android:textSize="@dimen/twelve" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropoli_light"
                android:text="Upload aadhar/voter Id/Pan card"
                android:textSize="@dimen/elevensp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_stoke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/ultra_light_grey"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Upload Front Side"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Upload photo/file"
                    android:textColor="@color/white"
                    android:background="@drawable/red_border_bg"
                    android:fontFamily="@font/metropolis_regular"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_stoke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/ultra_light_grey"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Upload Back Side"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Upload photo/file"
                    android:textColor="@color/white"
                    android:background="@drawable/red_border_bg"
                    android:fontFamily="@font/metropolis_regular"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_medium"
                android:text="Passport Size Photo"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_stoke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/ultra_light_grey"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="Upload Photo"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Upload photo/file"
                    android:textColor="@color/white"
                    android:background="@drawable/red_border_bg"
                    android:fontFamily="@font/metropolis_regular"
                    android:padding="10dp"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/continueAddStaff"
            android:layout_width="@dimen/twohundreddp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/hundreddp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/red_border_bg"
            android:fontFamily="@font/metropolis_semi_bold"
            android:text="Continue To Add"
            android:textSize="@dimen/fifteen"  />

    </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>